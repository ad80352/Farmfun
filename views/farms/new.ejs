<% layout('layouts/boilerplate') %>


    <div class="row">
        <h1 class="text-center my-3 mb-3 text-secondary fw-bold">新增景點</h1>
        <div class="col-md-6 offset-md-3 p-3">
            <form action="/farms" method="POST">
                <div class="mb-3 fs-5">
                    <label class="form-label" for="name">名稱（必填）</label>
                    <input class="form-control" type="text" id="name" name="farm[title]" autofocus required>
                </div>
                <div class="mb-3 fs-5">
                    <label class="form-label" for="address">地址（必填）</label>
                    <input class="form-control" type="text" id="address" name="farm[address]" placeholder="請至少輸入縣市" required>
                </div>
                <div class="mb-3 fs-5">
                    <label class="form-label" for="website">網站</label>
                    <input class="form-control" type="url" id="website" name="farm[website]" placeholder="請輸入網址列">
                </div>
                <div class="mb-3 fs-5">
                    <label class="form-label" for="tel">電話</label>
                    <input class="form-control" type="text" id="tel" name="farm[tel]">
                </div>
                <div class="mb-3 fs-5">
                    <label class="form-label" for="openHours">開放時間</label>
                    <input class="form-control" type="text" id="openHours" name="farm[openHours]">
                </div>
                <div class="mb-3 fs-5">
                    <label class="form-label" for="image">圖片網址（必填）</label>
                    <input class="form-control" type="url" id="image" name="farm[image]" placeholder="請輸入網址列" required>
                </div>

                <div class="mb-3 fs-5">
                    <label class="form-label" for="description">介紹（必填）</label>
                    <textarea class="form-control" type="text" id="description" name="farm[description]" rows="6"
                        required></textarea>
                </div>
                <p class="fs-5 me-2">可否使用「信用卡」？</p>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="farm[creditCard]" id="creditcardTrue"
                        value="true">
                    <label class="form-check-label" for="creditcardTrue">
                        可
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="farm[creditCard]" id="creditcardFalse"
                        value="false" checked>
                    <label class="form-check-label" for="creditcardFalse">
                        不可
                    </label>
                </div>
                <br>
                <p class="fs-5 me-2 mt-3">可否使用「國旅卡」？</p>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="farm[travelCard]" id="travelTrue" value="true">
                    <label class="form-check-label" for="travelTrue">
                        可
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="farm[travelCard]" id="travelFalse" value="false"
                        checked>
                    <label class="form-check-label" for="travelFalse">
                        不可
                    </label>
                </div>
                <br>
                <button class="btn btn-success mt-3 opacity-75 me-2">新增</button>
                <a class="btn btn-five mt-3" href="/farms">取消</a>
            </form>
        </div>
    </div>