<% layout('layouts/boilerplate') %> 

    <div class="row">
        <h1 class="text-center mb-3">編輯景點</h1>
        <div class="col-6 offset-3 rounded bg-five bg-opacity-25 p-3">
            <form action="/farms/<%=farm._id%>?_method=PUT" method="POST">
                <div class="mb-3 fs-5">
                    <label class="form-label" for="name">名稱</label>
                    <input class="form-control" type="text" id="name" name="farm[title]" value="<%= farm.title %>" required>
                </div>
                <div class="mb-3 fs-5">
                    <label class="form-label" for="address">地址</label>
                    <input class="form-control" type="text" id="address" name="farm[address]" value="<%= farm.address %>" required>
                </div>
                <div class="mb-3 fs-5">
                    <label class="form-label" for="website">網站</label>
                    <input class="form-control" type="url" id="website" name="farm[website]" value="<%= farm.website %>">
                </div>
                <div class="mb-3 fs-5">
                    <label class="form-label" for="tel">電話</label>
                    <input class="form-control" type="text" id="tel" name="farm[tel]" value="<%= farm.tel %>">
                </div>
                <div class="mb-3 fs-5">
                    <label class="form-label" for="openHours">開放時間</label>
                    <input class="form-control" type="text" id="openHours" name="farm[openHours]" value="<%= farm.openHours %>">
                </div>
                <div class="mb-3 fs-5">
                    <label class="form-label" for="image">圖片網址</label>
                    <input class="form-control" type="url" id="image" name="farm[image]" value="<%= farm.image %>" required>
                </div>
                <div class="mb-3 fs-5">
                    <label class="form-label" for="description">介紹</label>
                    <textarea class="form-control" type="text" id="description" name="farm[description]" rows="8" required><%= farm.description %></textarea>
                </div>

                <!-- 編輯時radio的預設值要怎麼顯示which selected? -->
                <span class="fs-5 me-5">可否使用「信用卡」？</span>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="farm[creditCard]" id="creditcardTrue" value="true" <%= farm.creditCard === true ? 'checked' : '' %> >
                    <label class="form-check-label" for="creditcardTrue">
                        可
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="farm[creditCard]" id="creditcardFalse" value="false" <%= farm.creditCard === false ? 'checked' : '' %> >
                    <label class="form-check-label" for="creditcardFalse">
                        不可
                    </label>
                </div>
                <br>
                <span class="fs-5 me-5">可否使用「國旅卡」？</span>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="farm[travelCard]" id="travelTrue" value="true" <%= farm.travelCard === true ? 'checked' : '' %>>
                    <label class="form-check-label" for="travelTrue">
                        可
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="farm[travelCard]" id="travelFalse" value="false" <%= farm.travelCard === false ? 'checked' : '' %>>
                    <label class="form-check-label" for="travelFalse">
                        不可
                    </label>
                </div>
                <br>
                <button class="btn btn-success mt-3 opacity-75 me-2">確認更新</button>
                <a href="/farms/<%= farm._id %>" class="btn btn-five mt-3">取消</a>
            </form>
        </div>
    </div>
