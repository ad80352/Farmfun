<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6">
            <section class="card">
                <img class="card-img-top bg-four" src="<%= farm.image %>" alt="">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item list-group-item-four fs-4">
                        <strong>
                            <%= farm.title %>
                        </strong>
                    </li>
                    <li class="list-group-item list-group-item-four">
                        <img id="img" src="/location.png" alt="">&nbsp; 
                        地址：<%= farm.address %>
                    </li>

                    <% if (farm.website) { %>
                        <li class="list-group-item list-group-item-four">
                            <img id="img" src="/earth.png" alt="">&nbsp; 
                            網站：<a href="<%= farm.website %>" target="_blank">
                                <%= farm.website %>
                            </a>
                        </li>
                        <% } %>

                            <% if (farm.tel) { %>
                                <li class="list-group-item list-group-item-four">
                                    <img id="img" src="/phone.png" alt="">&nbsp; 
                                    電話：<%= farm.tel %>
                                </li>
                                <% } %>

                                    <% if (farm.openHours) { %>
                                        <li class="list-group-item list-group-item-four ">
                                            <img id="img" src="/door.png" alt="">&nbsp; 
                                            開放時間：<%= farm.openHours %>
                                        </li>
                                        <% } %>

                                            <li class="list-group-item list-group-item-four ">
                                                <img id="img" src="/card.png" alt="">&nbsp; 
                                                信用卡：<%= farm.creditCard === true ? '可' :'不可' %>&emsp;&emsp;
                                                國旅卡：<%= farm.travelCard === true ? '可' :'不可' %>
                                            </li>
                                            <% if (currentUser && farm.author.equals(currentUser._id)) { %>
                                                <li class="list-group-item list-group-item-four opacity-85">
                                                    <a class="btn btn-success btn-sm text-white border"
                                                        href="/farms/<%=farm._id%>/edit">編輯</a>
                                                    <form class="d-inline border"
                                                        action="/farms/<%=farm._id%>?_method=DELETE" method="POST">
                                                        <button class="btn btn-danger btn-sm">刪除</button>
                                                    </form>
                                                </li>
                                                <% } %>
                                                <li class="list-group-item list-group-item-four">
                                                        管理者：<%= farm.author.username %>
                                                </li>
                </ul>
            </section>
        </div>
        <div class="col-6">
            <% if (currentUser) { %> 
            <form action="/farms/<%=farm._id%>/reviews" class="rounded bg-five bg-opacity-25 p-3" method="POST">
                <h3 class="text-center"><strong>留下評論</strong></h3>
                <hr>
                <div class="mb-3">
                    <label class="form-label" for="rating">評分</label>
                    <input class="form-range" type="range" id="rating" name="review[rating]" min="1" max="5">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">評論</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                </div>
                <button class="btn btn-main border border-four text-white">送出</button>
            </form>
            <% } %> 
            <!--
            我想讓有評論的頁面顯示「看看其他人怎麼說」，但不知道該怎麼寫，先略過
            <% if (farm.reviews._id) { %>
                <h4 class="mt-3">看看其他人怎麼說</h4>
            <% } %>  
            -->
            <% for (let review of farm.reviews) { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">評分：<%= review.rating %>
                        </h5>
                        <p class="card-text">評論：<%= review.body %>
                        </p>
                        <h6 class="card-subtitle mb-2 text-muted">- <%= review.author.username %> </h6>
                        <% if (currentUser && review.author.equals(currentUser._id)) { %>
                        <form action="/farms/<%=farm._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger opacity-85">刪除</button>
                        </form>
                        <% } %> 
                    </div>
                </div>
                <% } %>
        </div>
    </div>

    <div class="rounded bg-two bg-opacity-75 p-3 mt-3 shadow-sm">
        <h3 class="py-2">景點介紹</h3>
        <hr>
        <p class="py-2">
            <%- farm.description %>
        </p>
    </div>

    <!-- 引入後 <br> 變成字串內容而非html標籤  -->
    <!-- 所以要改用<%-  %>、而非<%=  %>，就不會跳脫html了 -->

    <footer>
        <a class="btn btn-outline-secondary mt-3" href="/farms">&larr;返回</a>
    </footer>