<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <div class="card-img-top rounded" style="background-size: cover;height: 16rem; background-image: url('https://images.unsplash.com/photo-1499529112087-3cb3b73cec95?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1074&q=80')"></div>
                <div class="card-body">
                    <h3 class="card-title text-center">登入</h3>
                    <hr>
                    <form action="/login" method="POST">
                        <div class="mb-3 fs-5">
                            <label class="form-label" for="username">使用者名稱</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                        </div>
                        <div class="mb-3 fs-5">
                            <label class="form-label" for="password">使用者密碼</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                        </div>
                        <span class="text-muted">還沒有帳號？ </span><a href="/register"
                            class="text-decoration-ubderline text-muted">點此註冊</a>
                        <div class="text-center mt-3">
                            <button class="btn btn-success opacity-75 me-2">登入</button>
                            <a class="btn btn-five" href="javascript:history.go(-1)">取消</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>